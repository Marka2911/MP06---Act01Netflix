<Window x:Class="_02___Act01Netflix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02___Act01Netflix"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">
    <Grid>
        <TextBox x:Name="txt_genere" HorizontalAlignment="Left" Margin="110,51,0,0" TextWrapping="Wrap" Text="Genere" VerticalAlignment="Top" Width="55" Height="23" RenderTransformOrigin="-0.035,0.678"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="95"><Run Language="es-es" Text="Escriu"/><Run Text=" un genere de musica"/></TextBlock>
        <Button x:Name = "btn_genere" Content="Enviar" HorizontalAlignment="Left" Margin="400,56,0,0" VerticalAlignment="Top" Click="Genere_Click"/>
        <TextBox x:Name="txt_outputFile" HorizontalAlignment="Left" Margin="308,56,0,0" TextWrapping="Wrap" Text="OutputFile" VerticalAlignment="Top" Width="66" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="189,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="95"><Run Language="es-es" Text="Nom del arxiu on vols treur-ho"/></TextBlock>
        <TextBox x:Name="num_generes" HorizontalAlignment="Left" Margin="571,56,0,0" TextWrapping="Wrap" Text="OutputFile" VerticalAlignment="Top" Width="66" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="457,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="95"><Run Language="es-es" Text="Num de records amb el teu genere"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="95"><Run Language="es-es" Text="Digues un index i et retornem el record"/></TextBlock>
        <TextBox x:Name="txt_index" HorizontalAlignment="Left" Margin="110,102,0,0" TextWrapping="Wrap" Text="Index" VerticalAlignment="Top" Width="55" Height="23" RenderTransformOrigin="-0.035,0.678"/>
        <TextBlock x:Name = "txt_record" HorizontalAlignment="Left" Margin="241,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width ="717" Height="87"/>
        <Button x:Name = "btn_index" Content="Enviar" HorizontalAlignment="Left" Margin="170,104,0,0" VerticalAlignment="Top" Click="Index_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="241,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="15" Width="94"><Run Language="es-es" Text="Record"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="95"><Run Text="Digues un "/><Run Language="es-es" Text="ID"/><Run Text=" i et retornem el record"/></TextBlock>
        <TextBox x:Name="txt_ID" HorizontalAlignment="Left" Margin="110,211,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="55" Height="23" RenderTransformOrigin="-0.035,0.678"/>
        <TextBlock x:Name = "txt_record_ID" HorizontalAlignment="Left" Margin="241,211,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width ="717" Height="87"/>
        <Button x:Name = "btn_ID" Content="Enviar" HorizontalAlignment="Left" Margin="170,213,0,0" VerticalAlignment="Top" Click="ID_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="241,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="15" Width="94"><Run Language="es-es" Text="Record"/></TextBlock>

    </Grid>
</Window>
